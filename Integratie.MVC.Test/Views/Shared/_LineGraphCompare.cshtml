<canvas id="@ViewBag.id" style="max-height:100%"></canvas>
<script>
    var ctx = document.getElementById("@ViewBag.id").getContext("2d");
    var chart = new Chart(ctx, {
        type: 'line',
        data: {
            labels: ["maandag", "dinsdag", "woensdag"]    
        },
        options: {
        scales: {
            yAxes: [{
                ticks: {
                    beginAtZero:true
                }
            }]
            },
            tooltips: {
                mode: 'index'
            }
    }
    });
    chart.data.datasets = [{
        label: 'Bart',
        data: [75, 60, 70],
        borderColor: 'rgba(255,99,132,1)',
        pointBackgroundColor: 'rgba(255,99,132,1)',
        borderWidth: 2,
        fill: false
    }, {
        label: 'Maggie',
        data: [100, 75, 80],
        borderColor: 'rgba(54, 162, 235, 1)',
        pointBackgroundColor: 'rgba(54, 162, 235, 1)',
        borderWidth: 2,
        fill: false
    }];
    chart.update();
</script>