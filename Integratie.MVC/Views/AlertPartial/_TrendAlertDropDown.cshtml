@model Integratie.Domain.Entities.Alerts.TrendAlert

@{
    string type;
}

@if (Model.Graph.GraphType == Integratie.Domain.Entities.Graph.GraphType.Barchart)
{
    type = "Bar";
}
else
{
    type = "Line";
}
<div class="item"><a href="@Url.Action("Persoon","Subject",new { @id = Model.Subject.ID, @Full_Name = Model, @alertId = Model.AlertID, @type = type })">@Html.DisplayFor(model => model.Subject.Name)</a></div>
