@model IEnumerable<Integratie.Domain.Entities.Subjects.Theme>

@{
    ViewBag.Title = "View";
}

<h2>Themas Bewerken</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Terms)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Image)
        </th>
        <th>Opties</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Terms)
            </td>
            <td>
                <img src="@item.GetImageSrc()" width="30" height="30" />
            </td>
            <td>
                @Html.ActionLink("Add Story", "CreateStory", "Theme", new { themaId = item.ID }, null)
                @Html.ActionLink("Edit Stories", "EditStories", "Theme", new { themaId = item.ID }, null)
                @*@Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
                    @Html.ActionLink("Details", "Details", new { id=item.ID }) |
                    @Html.ActionLink("Delete", "Delete", new { id=item.ID })*@
            </td>
        </tr>
    }

</table>
