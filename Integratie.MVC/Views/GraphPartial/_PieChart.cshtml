<canvas id="@ViewBag.id" style="max-height:100%"></canvas>
<script>
    var ctx = document.getElementById("@ViewBag.id").getContext("2d");
    var chart = new Chart(ctx, {
        type: 'doughnut',
        data: {
            labels: @Html.Raw(ViewBag.Keys),
            datasets: [{
                data: @Html.Raw(ViewBag.Values),
                backgroundColor: [
                    'rgba(255, 99, 132, 0.2)',
                    'rgba(54, 162, 235, 0.2)',
                    'rgba(255, 206, 86, 0.2)',
                    'rgba(75, 192, 192, 0.2)',
                    'rgba(153, 102, 255, 0.2)'
                ]
            }
            ]
        }
    });
</script>
