@model IEnumerable<Integratie.MVC.Models.ApplicationUser>

@{
    ViewBag.Title = "Administrators";
}

<h2>Administrators</h2>


<table class="table" style="color: black;">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            @Html.HiddenFor(modelItem => item.Id)
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.ActionLink("Passwoord aanpassen", "EditAdminPassword", new { id = item.Id }) |
                @Html.ActionLink("Email aanpassen", "EditEmail", new { id = item.Id })
            </td>
        </tr>
    }

</table>
